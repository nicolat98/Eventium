<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="nav_fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_settings_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_settings_user"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:contextClickable="true"
        android:layout_below="@id/tv_settings_fragment"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        >

        <TextView
            android:id="@+id/tv_card_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="30sp"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="20sp"
        android:layout_below="@id/card_view_settings_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>